+++ b/testing/variations/fieldtrial_testing_config.json
@@ -1612,9 +1612,9 @@
             ],
             "experiments": [
                 {
-                    "name": "NotSecureWarning",
+                    "name": "NotSecureDangerous",
                     "params": {
-                        "treatment": "warning"
+                        "treatment": "dangerous"
                     },
                     "enable_features": [
                         "MarkHttpAs"
